<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="aapReviewModel"
            type="com.bitvault.appstore.webservice.response.AppReviewsModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <com.bitvault.appstore.custom.FontTextView
                android:id="@+id/id_tv_cancel"
                style="@style/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen5"
                android:onClick="onCancelClicked"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_tv_title"
                style="@style/HeaderTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_white" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_ll_rating_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen25"
                        android:layout_marginLeft="@dimen/dimen55"
                        android:layout_marginTop="@dimen/dimen25"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_tv_average_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text55" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <RatingBar
                                android:id="@+id/id_ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:stepSize=".5"
                                android:rating="2.5"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/id_tv_total_ratingCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/id_tv_average_rating"
                                    android:textSize="@dimen/text15" />

                                <com.bitvault.appstore.custom.FontTextView
                                    android:id="@+id/id_ftv_ratingHuman_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/dimen5"
                                    android:layout_toRightOf="@+id/id_tv_total_ratingCount"
                                    android:text="@string/user_img"
                                    android:textSize="@dimen/text15" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dimen55"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen20"
                            android:gravity="right|center_vertical">

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen20"
                            android:gravity="right|center_vertical">

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen20"
                            android:gravity="right|center_vertical">

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen20"
                            android:gravity="right|center_vertical">

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen1"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen20"
                            android:gravity="right|center_vertical">

                            <com.bitvault.appstore.custom.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="n"
                                android:textSize="@dimen/text9" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/id_ratingBar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen30"
                        />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen1"
                    android:layout_marginBottom="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen20"
                    android:background="@color/color_black_light" />

                </LinearLayout>
                    
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_rv_allReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loadingLout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:indeterminate="true" />

        </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>