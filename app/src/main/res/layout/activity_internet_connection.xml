<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/color_white"
        android:orientation="vertical">

        <com.bitvault.appstore.svlibrary.widgets.DetailSearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/internetSearchView"/>

        <TextView
            android:id="@+id/id_tv_no_internet_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen25"
            android:layout_marginRight="@dimen/dimen25"
            android:gravity="center"
            tools:text="hello"
            android:textSize="@dimen/text25"/>

        <Button
            android:id="@+id/id_btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen20"
            android:padding="@dimen/dimen5"
            android:text="@string/retry"
            android:textSize="@dimen/text25"
            android:focusableInTouchMode="true"
            android:background="@color/color_black_light"/>


    </LinearLayout>

</layout>